<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"

    tools:context=".ShowMemberDetail">

    <include layout="@layout/mtoolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    >

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/imgLogo"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@color/activity_back"
                        android:scaleType="fitXY"
                        android:src="@drawable/logo_gray"
                        app:layout_constraintDimensionRatio="H,9:9"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="1dp" />

                </android.support.constraint.ConstraintLayout>

                <com.idpz.bazarayesh.Views.mTextView
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/roundshape"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="ویرایش پروفایل "
                    android:textColor="@color/colorPrimary"
                    android:visibility="visible" />
                <com.idpz.bazarayesh.Views.mTextView
                    android:id="@+id/manage_ads"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/roundshapepink"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="مدیریت آگهی "

                    android:layout_toLeftOf="@+id/edit"
                    android:textColor="@color/white"
                    android:visibility="visible" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel1"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.25">

                    <com.idpz.bazarayesh.Views.mTextView
                        android:id="@+id/txtName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:text=""
                        android:textColor="@color/dark" />

                    <com.idpz.bazarayesh.Views.mTextView
                        android:id="@+id/managerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtName"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"

                        android:layout_marginRight="8dp"
                        android:text="fgfdgfdgfg"
                        android:textColor="@color/dark"
                        android:visibility="gone" />

                    <com.idpz.bazarayesh.Views.mTextView
                        android:id="@+id/fame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/managerName"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp"
                        android:text="fgfdgfdgfg"
                        android:textColor="@color/dark"
                        android:visibility="gone" />

                    <com.idpz.bazarayesh.Views.mTextView
                        android:id="@+id/txtphone2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fame"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp"
                        android:text=""
                        android:textColor="@color/dark" />

                    <com.idpz.bazarayesh.Views.mTextView
                        android:id="@+id/txtphone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtphone2"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp"
                        android:text=""
                        android:textColor="@color/dark" />

                    <com.idpz.bazarayesh.Views.mTextView
                        android:id="@+id/txtAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtphone"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="4dp"
                        android:gravity="bottom"
                        android:text=""
                        android:textColor="@color/dark" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75">

                    <com.idpz.bazarayesh.Views.mTextView
                        android:id="@+id/title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="8dp"
                        android:gravity="right"
                        android:text="آرایشگاه/آموزشگاه:"
                        android:textColor="@color/gray" />


                    <com.idpz.bazarayesh.Views.mTextView
                        android:id="@+id/title6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title1"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="right"
                        android:text="نام مدیر"
                        android:textColor="@color/gray"
                        android:visibility="gone" />

                    <com.idpz.bazarayesh.Views.mTextView
                        android:id="@+id/title7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title6"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="right"
                        android:text="شهرت :"
                        android:textColor="@color/gray"
                        android:visibility="gone" />

                    <com.idpz.bazarayesh.Views.mTextView
                        android:id="@+id/title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title7"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="right"
                        android:text="تلفن ثابت: "
                        android:textColor="@color/gray" />

                    <com.idpz.bazarayesh.Views.mTextView
                        android:id="@+id/title4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title3"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="right"
                        android:text="تلفن همراه: "
                        android:textColor="@color/gray" />

                    <com.idpz.bazarayesh.Views.mTextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title4"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="4dp"
                        android:gravity="bottom"
                        android:text="آدرس:"
                        android:textColor="@color/gray" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:id="@+id/v"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/linear"
                android:layout_marginLeft="8dp"

                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"

                android:background="@color/grey" />

            <RelativeLayout
                android:id="@+id/rel2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v"
                android:layout_marginTop="8dp">


                <ImageView
                    android:id="@+id/telegram"

                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"

                    app:srcCompat="@drawable/ic_telegram" />

                <ImageView
                    android:id="@+id/instagram"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/telegram" />

                <ImageView
                    android:id="@+id/img_views"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="4dp"
                    app:srcCompat="@drawable/ic_eye" />

                <com.idpz.bazarayesh.Views.mTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/title"

                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_toLeftOf="@+id/img_views"
                    android:gravity="center_vertical"
                    android:layout_marginRight="4dp"
                    android:text="بازدید: " />

                <com.idpz.bazarayesh.Views.mTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtView"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_toLeftOf="@+id/title"
                    android:gravity="center_vertical"
                    android:text="0" />


            </RelativeLayout>

            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/rel2"
                android:layout_marginLeft="8dp"

                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"

                android:background="@color/grey" />

            <RelativeLayout
                android:id="@+id/relative2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v1"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp">

                <com.idpz.bazarayesh.Views.mTextView
                    android:id="@id/workSpaceTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="عکس های محیط داخلی "
                    android:textColor="@color/dark"
                    android:textSize="16dp"

                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/workSpace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/workSpaceTitle"
                    android:layout_marginTop="8dp" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"

                    android:layout_below="@+id/workSpace"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"

                    android:layout_marginRight="8dp"

                    android:background="@color/grey" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relative3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative2"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp">


                <com.idpz.bazarayesh.Views.mTextView
                    android:id="@id/awardTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="عکس های جوایز دریافت شده"

                    android:textColor="@color/dark"
                    android:textSize="16dp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/award"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/awardTitle"
                    android:layout_marginTop="8dp" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"

                    android:layout_height="0.5dp"
                    android:layout_below="@+id/award"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"

                    android:background="@color/grey" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative3"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp">


                <com.idpz.bazarayesh.Views.mTextView
                    android:id="@id/famousCustomerTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="مشتری های معروف"
                    android:textColor="@color/dark"
                    android:textSize="16dp"

                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/famousCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/famousCustomerTitle"
                    android:layout_marginTop="8dp" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"

                    android:layout_height="0.5dp"
                    android:layout_below="@+id/famousCustomer"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"

                    android:background="@color/grey" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relative5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative4"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp">


                <com.idpz.bazarayesh.Views.mTextView
                    android:id="@id/workShopTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="دوره های گذرانده شده"
                    android:textColor="@color/dark"
                    android:textSize="16dp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/workShop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/workShopTitle"
                    android:layout_marginTop="8dp" />

                <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"

                    android:layout_height="0.5dp"
                    android:layout_below="@+id/workShop"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"

                    android:background="@color/grey" />
            </RelativeLayout>

            <RelativeLayout

                android:id="@+id/relative6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative5"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp">


                <com.idpz.bazarayesh.Views.mTextView
                    android:id="@id/servicesTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="خدمات قابل ارائه"
                    android:textColor="@color/dark"

                    android:textSize="16dp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/services"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/servicesTitle"
                    android:layout_marginTop="8dp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>