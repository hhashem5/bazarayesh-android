<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    >

    <include layout="@layout/mtoolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"

                android:background="@drawable/layout_corners_shape2">

                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/rel1"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.25">

                    <com.idpz.bazarayesh.Views.mTextView
                        android:id="@+id/txtName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:text="fgfdgfdgfg"
                        android:textColor="@color/dark" />

                    <com.idpz.bazarayesh.Views.mTextView
                        android:id="@+id/txtAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtName"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="bottom"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="4dp"
                        android:text="gdfgfgdf"
                        android:textColor="@color/dark" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75">

                    <com.idpz.bazarayesh.Views.mTextView
                        android:id="@+id/title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="8dp"
                        android:gravity="right"
                        android:text="نام آرایشگاه یا آموزشگاه:"
                        android:textColor="@color/gray" />

                    <com.idpz.bazarayesh.Views.mTextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title1"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_alignParentBottom="true"

                        android:layout_marginBottom="4dp"
                        android:gravity="bottom"
                        android:text="آدرس:"
                        android:textColor="@color/gray" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:id="@+id/v"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/linear"
                android:layout_marginLeft="8dp"

                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"

                android:background="@color/grey" />

            <RelativeLayout
                android:id="@+id/rel2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v"
                android:layout_marginTop="8dp">


                <ImageView
                    android:id="@+id/telegram"

                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    app:srcCompat="@drawable/ic_telegram" />

                <ImageView
                    android:id="@+id/instagram"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="16dp"
                    android:layout_toLeftOf="@+id/telegram"
                    app:srcCompat="@drawable/ic_instagram" />
            </RelativeLayout>

            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/rel2"
                android:layout_marginLeft="8dp"

                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"

                android:background="@color/grey" />

            <RelativeLayout
                android:id="@+id/relative2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v1"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp">

                <com.idpz.bazarayesh.Views.mTextView
                    android:id="@id/workSpaceTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="عکس های محیط داخلی "
                    android:textColor="@color/dark"
                    android:textSize="16dp"

                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/workSpace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/workSpaceTitle"
                    android:layout_marginTop="8dp" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"

                    android:layout_below="@+id/workSpace"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"

                    android:layout_marginRight="8dp"

                    android:background="@color/grey" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relative3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative2"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp">


                <com.idpz.bazarayesh.Views.mTextView
                    android:id="@id/awardTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="عکس های جوایز دریافت شده"

                    android:textColor="@color/dark"
                    android:textSize="16dp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/award"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/awardTitle"
                    android:layout_marginTop="8dp" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"

                    android:layout_height="0.5dp"
                    android:layout_below="@+id/award"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"

                    android:background="@color/grey" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative3"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp">


                <com.idpz.bazarayesh.Views.mTextView
                    android:id="@id/famousCustomerTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="مشتری های معروف"
                    android:textColor="@color/dark"
                    android:textSize="16dp"

                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/famousCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/famousCustomerTitle"
                    android:layout_marginTop="8dp" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"

                    android:layout_height="0.5dp"
                    android:layout_below="@+id/famousCustomer"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"

                    android:background="@color/grey" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relative5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative4"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp"
                android:visibility="gone">


                <com.idpz.bazarayesh.Views.mTextView
                    android:id="@id/workShopTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="دوره های گذرانده شده"
                    android:textColor="@color/dark"
                    android:textSize="16dp"

                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/workShop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/workShopTitle"
                    android:layout_marginTop="8dp" />

                <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"

                    android:layout_height="0.5dp"
                    android:layout_below="@+id/workShop"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"

                    android:background="@color/grey" />
            </RelativeLayout>

            <RelativeLayout

                android:id="@+id/relative6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative5"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp">


                <com.idpz.bazarayesh.Views.mTextView
                    android:id="@id/servicesTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="خدمات قابل ارائه"
                    android:textColor="@color/dark"

                    android:textSize="16dp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/services"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/servicesTitle"
                    android:layout_marginTop="8dp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>