<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/mtoolbar" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/consSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        app:layout_collapseMode="parallax">

        <ss.com.bannerslider.Slider
            android:id="@+id/banner_slider1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="H,16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:slider_animateIndicators="true"
            app:slider_loopSlides="true"
            app:slider_selectedSlideIndicator="@drawable/indicator_selected"
            app:slider_unselectedSlideIndicator="@drawable/indicator_unselected"
            tools:layout_editor_absoluteX="1dp" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/consSlider"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/rel2"

                >

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imgHairDresser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    />

                <com.idpz.bazarayesh.Views.mTextViewB
                    android:id="@+id/txtTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgHairDresser"
                    android:layout_margin="4dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="11dp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel2"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imgBarber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    />

                <com.idpz.bazarayesh.Views.mTextViewB
                    android:id="@+id/txtTitle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgBarber"
                    android:layout_margin="4dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="11dp" />


            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/rel4"

                >

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imgTeacher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    />

                <com.idpz.bazarayesh.Views.mTextViewB
                    android:id="@+id/txtTitle3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgTeacher"
                    android:layout_margin="4dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="11dp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel4"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imgInstitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    />

                <com.idpz.bazarayesh.Views.mTextViewB
                    android:id="@+id/txtTitle4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgInstitude"
                    android:layout_margin="4dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="11dp" />


            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>