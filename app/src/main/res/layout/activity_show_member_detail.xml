<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_back"
    android:layoutDirection="ltr"
    tools:context=".ShowMemberDetail">

    <include layout="@layout/mtoolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginRight="8dp">

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:id="@+id/imgLogo"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:id="@+id/rel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"

                android:layout_toLeftOf="@id/imgLogo"
                android:gravity="right">

                <RelativeLayout
                    android:id="@+id/rel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <com.idpz.bazarayesh.Views.mTextView
                        android:id="@+id/title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:text="نام آرایشگاه یا آموزشگاه:"
                        android:textColor="@color/gray" />

                    <com.idpz.bazarayesh.Views.mTextView
                        android:id="@+id/txtName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"

                        android:text="fgfdgfdgfg"
                        android:textColor="@color/dark" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel1">

                    <com.idpz.bazarayesh.Views.mTextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:text="آدرس:"
                        android:textColor="@color/gray" />

                    <com.idpz.bazarayesh.Views.mTextView
                        android:id="@+id/txtAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text="gdfgfgdf"

                        android:textColor="@color/dark" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel2">

                    <com.idpz.bazarayesh.Views.mTextView
                        android:id="@+id/title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:text="تلگرام:"
                        android:textColor="@color/gray" />

                    <com.idpz.bazarayesh.Views.mTextView
                        android:id="@+id/txttelegram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text="gdfgfdgfg"

                        android:textColor="@color/link_blue" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel3">

                    <com.idpz.bazarayesh.Views.mTextView
                        android:id="@+id/title4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:text="اینستاگرام:"
                        android:textColor="@color/gray" />

                    <com.idpz.bazarayesh.Views.mTextView
                        android:id="@+id/txtinsta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"

                        android:text="fbgfb"
                        android:textColor="@color/link_blue" />
                </RelativeLayout>


            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"

                android:layout_height="0.5dp"
                android:layout_below="@+id/imgLogo"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"

                android:background="@color/grey" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative1"
            android:layout_marginTop="16dp"

            android:layout_marginRight="8dp">

            <com.idpz.bazarayesh.Views.mTextView
                android:id="@id/workSpaceTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="عکس های محیط داخلی "
                android:textColor="@color/dark"
                android:textSize="16dp"

                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/workSpace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/workSpaceTitle"
                android:layout_marginTop="8dp" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"

                android:layout_below="@+id/workSpace"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"

                android:layout_marginRight="8dp"

                android:background="@color/grey" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relative3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative2"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp">


            <com.idpz.bazarayesh.Views.mTextView
                android:id="@id/awardTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="عکس های جوایز دریافت شده"

                android:textColor="@color/dark"
                android:textSize="16dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/award"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/awardTitle"
                android:layout_marginTop="8dp" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"

                android:layout_height="0.5dp"
                android:layout_below="@+id/award"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"

                android:background="@color/grey" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative3"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp">


            <com.idpz.bazarayesh.Views.mTextView
                android:id="@id/famousCustomerTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="مشتری های معروف"
                android:textColor="@color/dark"
                android:textSize="16dp"

                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/famousCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/famousCustomerTitle"
                android:layout_marginTop="8dp" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"

                android:layout_height="0.5dp"
                android:layout_below="@+id/famousCustomer"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"

                android:background="@color/grey" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relative5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative4"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:visibility="gone">


            <com.idpz.bazarayesh.Views.mTextView
                android:id="@id/workShopTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="دوره های گذرانده شده"
                android:textColor="@color/dark"
                android:textSize="16dp"

                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/workShop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/workShopTitle"
                android:layout_marginTop="8dp" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"

                android:layout_height="0.5dp"
                android:layout_below="@+id/workShop"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"

                android:background="@color/grey" />
        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/relative6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative5"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp">


            <com.idpz.bazarayesh.Views.mTextView
                android:id="@id/servicesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="خدمات قابل ارائه"
                android:textColor="@color/dark"

                android:textSize="16dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/servicesTitle"
                android:layout_marginTop="8dp" />
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>